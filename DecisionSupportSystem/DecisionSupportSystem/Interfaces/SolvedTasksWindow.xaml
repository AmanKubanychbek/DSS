<Window x:Class="DecisionSupportSystem.SolvedTasksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SolvedTasksWindow" Height="333" Width="544">
    <Grid>
        <DataGrid x:Name="gridTasks" Margin="10,37,10,10" AutoGenerateColumns="False"
		RowDetailsVisibilityMode="VisibleWhenSelected" CanUserReorderColumns="False">
            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Margin="10" Padding="10" BorderBrush="SteelBlue" BorderThickness="3" CornerRadius="5">
                        <TextBlock Text="{Binding Recommendation}" TextWrapping="Wrap" FontSize="10" MaxWidth="600" TextAlignment="Left"></TextBlock>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата решения" Width="175" IsReadOnly="True" Binding="{Binding Date}"></DataGridTextColumn>
                <DataGridTextColumn Header="Комментарии" IsReadOnly="True" Binding="{Binding Comment}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="Download" Content="Загрузить" Margin="0,10,10,0" HorizontalAlignment="Right" Width="140" Height="22" VerticalAlignment="Top" Click="Download_Click"/>
    </Grid>
</Window>
