<Page x:Class="DecisionSupportSystem.Task_6.PageActions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:v="clr-namespace:DecisionSupportSystem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="500"
	Title="Действия" Loaded="PageActionsOnLoaded" ShowsNavigationUI="False">

    <Grid>
        <Button x:Name="BtnNext" Content="далее" Style="{StaticResource NavigationButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,35,0" Click="BtnNext_Click"/>
        <Button x:Name="BtnPrev" Content="назад" Style="{StaticResource NavigationButtonStyle}" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,115,0" Height="25" Click="BtnPrev_Click"/>
        <Label Content="Список возможных действий:" HorizontalAlignment="Left" Margin="10,10,0,455" Width="223" FontSize="14"/>
        <v:ActionsListControl x:Name="ActionListControl" Margin="0,50,0,20"/>
    </Grid>
</Page>