<Page x:Class="DecisionSupportSystem.Task_7.PageEvents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:v="clr-namespace:DecisionSupportSystem.Views"
      mc:Ignorable="d" 
	  Title="События" Loaded="PageEventsOnLoaded" d:DesignWidth="500" d:DesignHeight="332" ShowsNavigationUI="False">

    <Grid>
        <Button x:Name="BtnNext" Content="далее &gt;&gt;" Style="{StaticResource NavigationButtonStyle}" HorizontalAlignment="Right"   Margin="0,10,35,0" Height="25" VerticalAlignment="Top" Click="BtnNext_Click"/>
        <Button x:Name="BtnPrev" Content="&lt;&lt; назад" Style="{StaticResource NavigationButtonStyle}" HorizontalAlignment="Right" Margin="0,10,115,0" Height="25" VerticalAlignment="Top" Click="BtnPrev_OnClick"/>
        <Label  Content="Список возможных событий:" Margin="10,10,0,0" VerticalAlignment="Top" Height="29" FontSize="14" HorizontalAlignment="Left" Width="233"/>
        <v:MainEventListControl x:Name="EventListControl" Margin="0,50,0,25"/>
    </Grid>
</Page>
